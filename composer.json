{
    "name": "harmony-framework/sail",
    "description": "Docker files for running a basic harmony application.",
    "keywords": ["harmony", "docker"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/harmony/sail/issues",
        "source": "https://github.com/harmony/sail"
    },
    "authors": [
        {
            "name": "Hussein Alaa",
            "email": "hussein@harmony-framework.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "g4t/console": "^8.0|^9.0|^10.0",
        "g4t/contracts": "^8.0|^9.0|^10.0",
        "g4t/support": "^8.0|^9.0|^10.0",
        "symfony/yaml": "^6.0"
    },
    "bin": [
        "bin/sail"
    ],
    "autoload": {
        "psr-4": {
            "harmony\\Sail\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "harmony": {
            "providers": [
                "harmony\\Sail\\SailServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0",
        "phpstan/phpstan": "^1.10"
    }
}
